<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomTextView">
        <attr name="customColor" format="color"/>
        <attr name="customText" format="string"/>
    </declare-styleable>

    <declare-styleable name="Polygon">
        <attr name="ptextColor" format="color" />
        <attr name="pedgeColor" format="color" />
        <attr name="pareaColor" format="color" />
        <attr name="ploopCount" format="integer" />
        <attr name="pedgeCount" format="integer" />
    </declare-styleable>


        <declare-styleable name="HeartView">
            <!--心电线的宽度-->
            <attr name="heart_line_border" format="dimension" />
            <!--每个表格的行数（就是小格子数）-->
            <attr name="heart_grid_row" format="integer" />
            <!--大表格的边框的宽度-->
            <attr name="heart_grid_border" format="dimension" />
            <!--每个小格子的宽高-->
            <attr name="heart_grid_row_height" format="dimension" />
            <!--每个小格子的线的宽度-->
            <attr name="heart_grid_line_border" format="dimension" />
            <!--基准线-->
            <attr name="heart_base_line" format="integer" />
            <!--最大值-->
            <attr name="heart_max" format="integer" />
            <!--最小值-->
            <attr name="heart_min" format="integer" />
            <!--数据采集频率-->
            <attr name="heart_hz" format="integer" />
            <!--一个控件，可以显示的心率的时长-->
            <attr name="heart_show_seconds" format="float" />
            <!--心率线条的颜色-->
            <attr name="heart_color" format="color" />
            <!--表格线条的颜色-->
            <attr name="heart_grid_line_color" format="color" />
            <!--表格边框的颜色-->
            <attr name="heart_grid_border_color" format="color" />
            <!--控制播放速度的调整 值越小，播放速度越慢 -->
            <attr name="heart_speed" format="float" />
        </declare-styleable>

    <declare-styleable name="ContextTitle">
        <attr name="leftTextVisible" format="boolean"/>
        <attr name="leftText" format="string"/>
        <attr name="leftTextSize" format="integer"/>
        <attr name="leftTextColor" format="color"/>

        <attr name="leftImg" format="reference"/>
        <attr name="leftImgVisible" format="boolean"/>

        <attr name="titleText" format="string"/>
        <attr name="titleTextSize" format="integer"/>
        <attr name="titleTextColor" format="color"/>
        <attr name="titleVisible" format="boolean"/>
        <attr name="titleRightImg" format="reference"/>

        <attr name="rightImg" format="reference"/>
        <attr name="rightImgVisible" format="boolean"/>

        <attr name="rightTextVisible" format="boolean"/>
        <attr name="rightText" format="string"/>
        <attr name="rightTextSize" format="integer"/>
        <attr name="rightTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="StepsView">

        <attr name="isAnimation" format="boolean"/>
        <attr name="lostTextColor" format="color"/>
        <attr name="completedTextColor" format="color"/>
        <attr name="downColor" format="color"/>
        <attr name="todoCompletedTextColor" format="color"/>

    </declare-styleable>

    <declare-styleable name="LockView">
        <!-- 九宫格数量 -->
        <attr name="pointCount" format="integer"/>
        <!--是否在最后一个宫格显示连线-->
        <attr name="showInLastCircle" format="boolean"/>
        <!--线的宽度-->
        <attr name="lineStrokeWidth" format="integer"/>
        <!--圆形环的的宽度-->
        <attr name="circleStrokeWidth" format="integer"/>
        <!--连线顶端颜色-->
        <attr name="topLineColor" format="color"/>
        <!--连线的颜色-->
        <attr name="lineColor" format="color"/>
        <!--选中的宫格内点的颜色-->
        <attr name="selectCriclePointColor" format="color"/>
        <!--普通宫格内点的颜色-->
        <attr name="normalCriclePointColor" format="color"/>
        <!--普通宫格环的颜色-->
        <attr name="normalCricleColor" format="color"/>
        <!--选中宫格环的颜色-->
        <attr name="selectCricleColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RandonView">
        <attr name="rtext" format="string" />
        <attr name="rtextColor"  format="color"/>
        <attr name="rtextSize"  format="integer"/>
        <attr name="rbgColor" format="color"/>
    </declare-styleable>
    <!--多边形图片-->
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
        <enum name="polygon" value="2" />
    </attr>
    <declare-styleable name="MultiImageView">
        <attr name="type" />
        <attr name="miv_border_width" format="dimension" />
        <attr name="miv_border_color" format="color" />
        <attr name="miv_border_overlay" format="boolean" />
        <attr name="miv_fill_color" format="color" />
        <attr name="miv_corner_radius" format="dimension" />
        <attr name="miv_sides" format="integer" />
        <attr name="miv_rotate_angle" format="float" />
    </declare-styleable>

    <!--自定义倾斜45°的TextView的自定义属性-->
    <declare-styleable name="SlantedTextView">
        <!--倾斜文字角度-->
        <attr name="slantedDegree" format="integer" />
        <!--倾斜背景颜色-->
        <attr name="slantedBackgroundColor" format="color" />
        <!--倾斜文字颜色-->
        <attr name="slantedTextColor" format="color" />
        <!--倾斜文字大小-->
        <attr name="slantedTextSize" format="dimension" />
        <!--倾斜文字内容-->
        <attr name="slantedText" format="string" />
        <!--倾斜背景 边长距离-->
        <attr name="slantedLength" format="dimension" />
        <!--倾斜模式-->
        <attr name="slantedMode" format="enum">
            <!--左上角倾斜模式-->
            <enum name="left" value="0" />
            <!--右上角倾斜模式-->
            <enum name="right" value="1" />
            <!--左下角倾斜模式-->
            <enum name="left_bottom" value="2" />
            <!--右下角倾斜模式-->
            <enum name="right_bottom" value="3" />
            <!--左上角倾斜三角形模式-->
            <enum name="left_triangle" value="4" />
            <!--右上角倾斜三角形模式-->
            <enum name="right_triangle" value="5" />
            <!--左下角倾斜三角形模式-->
            <enum name="left_bottom_triangle" value="6" />
            <!--右下角倾斜三角形模式-->
            <enum name="right_bottom_triangle" value="7" />
        </attr>
    </declare-styleable>


<!--在values建一个attrs.xml-->

        <declare-styleable name="MyCircleView">
            <attr name="circlr_bound_width" format="dimension"/>
            <attr name="circlr_bound_color" format="color"/>
        </declare-styleable>

    <declare-styleable name="BorderTextView">
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="paddingLR" format="dimension" />
        <attr name="paddingTB" format="dimension" />
    </declare-styleable>

    <!-- 申请进度的自定义view-->
    <declare-styleable name="AuditProgressView">
        <!--当前步骤是否完成 -->
        <attr name="apv_isCurrentComplete" format="boolean" />
        <!--下一个步骤是否完成 -->
        <attr name="apv_isNextComplete" format="boolean" />
        <!--是不是第一个步骤 -->
        <attr name="apv_isFirstStep" format="boolean" />
        <!--是不是最后一个步骤 -->
        <attr name="apv_isLastStep" format="boolean" />
        <!--共有几个步骤 -->
        <attr name="apv_stepCount" format="integer" />
        <!--步骤提示 -->
        <attr name="apv_text" format="string|reference" />
    </declare-styleable>
</resources>